#include <string>
#include <vector>

// Data structure - holds only data, no construction logic.
struct User {
  std::string name;
  int age;
};

// Factory class - responsible for creating User objects.
class UserFactory {
public:
  // Creates a User object from raw data.
  static User CreateUser(const std::string& name, int age) {
    // This is where complex creation logic would go,
    // like validating input or fetching data from a database.
    User user;
    user.name = name;
    user.age = age;
    return user;
  }
};

// Example usage:
int main() {
  // Instead of constructing User directly, use the factory.
  User user = UserFactory::CreateUser("Alice", 30);
  return 0;
}
// This example demonstrates isolating data representation (User struct) from its construction logic (UserFactory class).
